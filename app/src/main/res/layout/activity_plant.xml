<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PlantActivity">

    <ImageView
        android:id="@+id/editimageView"
        android:layout_width="159dp"
        android:layout_height="190dp"
        android:layout_marginTop="80dp"
        android:contentDescription="no image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/headerView"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/plantnameText"
        android:layout_width="221dp"
        android:layout_height="42dp"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/kanit_light"
        android:paddingLeft="80sp"
        android:text="name"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editimageView" />

    <View
        android:id="@+id/dateplantview"
        android:layout_width="169dp"
        android:layout_height="87dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/roundsquare_bg"
        android:elevation="2dp"
        android:padding="16dp"
        app:cornerRadius="20dp"
        app:layout_constraintBottom_toTopOf="@+id/explainView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/plantnameText" />

    <View
        android:id="@+id/headerView"
        android:layout_width="400dp"
        android:layout_height="60dp"
        android:background="@color/Green"
        android:padding="16dp"
        app:cornerRadius="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/backPlant"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/view4"
        app:layout_constraintStart_toStartOf="@+id/view4"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_arrow" />

    <View
        android:id="@+id/explainView"
        android:layout_width="374dp"
        android:layout_height="197dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="180dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/roundsquare_bg"
        android:elevation="3dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editimageView"
        app:layout_constraintVertical_bias="0.95" />

    <TextView
        android:id="@+id/infoplant"
        android:layout_width="118dp"
        android:layout_height="47dp"
        android:layout_marginTop="16dp"
        android:text="โปรไฟล์"
        android:textColor="@color/white"
        android:textSize="32sp"
        android:fontFamily="@font/kanit_light"
        app:layout_constraintBottom_toBottomOf="@+id/headerView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/datestart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="วันที่เริ่มปลูก"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:translationZ="6dp"
        android:fontFamily="@font/kanit_light"
        app:layout_constraintBottom_toBottomOf="@+id/dateplantview"
        app:layout_constraintEnd_toEndOf="@+id/dateplantview"
        app:layout_constraintHorizontal_bias="0.51"
        app:layout_constraintStart_toStartOf="@+id/dateplantview"
        app:layout_constraintTop_toTopOf="@+id/dateplantview"
        app:layout_constraintVertical_bias="0.09" />

    <TextView
        android:id="@+id/datestart3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="คำอธิบายเพิ่มเติม"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:translationZ="6dp"
        android:fontFamily="@font/kanit_light"
        app:layout_constraintStart_toStartOf="@+id/explainView"
        app:layout_constraintTop_toTopOf="@+id/explainView" />

    <TextView
        android:id="@+id/dateofplant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="ดึงไฟเบส"
        android:translationZ="6dp"
        android:fontFamily="@font/kanit_light"
        app:layout_constraintEnd_toEndOf="@+id/dateplantview"
        app:layout_constraintStart_toStartOf="@+id/dateplantview"
        app:layout_constraintTop_toTopOf="@+id/dateplantview" />

    <TextView
        android:id="@+id/infoanno"
        android:layout_width="318dp"
        android:layout_height="115dp"
        android:layout_marginTop="56dp"
        android:text="ดึงไฟเบส"
        android:translationZ="6dp"
        android:fontFamily="@font/kanit_light"
        app:layout_constraintEnd_toEndOf="@+id/explainView"
        app:layout_constraintHorizontal_bias="0.571"
        app:layout_constraintStart_toStartOf="@+id/explainView"
        app:layout_constraintTop_toTopOf="@+id/explainView" />

    <View
        android:id="@+id/view13"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:background="@drawable/ic_wave"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/headerView" />
</androidx.constraintlayout.widget.ConstraintLayout>